<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="site" version="3.2.0" method="upgrade">

    <name>MOD_MAP</name>
    <author>Andy Kirk</author>
    <authorEmail>andy.kirk@npeu.ox.ac.uk</authorEmail>
    <authorUrl>https://www.npeu.ox.ac.uk</authorUrl>
    <creationDate>June 2019</creationDate>
    <copyright>(C) NPEU 2019</copyright>
    <license>MIT License; see LICENSE.md</license>

    <!--  The version string is recorded in the components table -->
    <version>1.0.0</version>
    <!-- The description is optional and defaults to the name -->
    <description>MOD_MAP_XML_DESCRIPTION</description>

    <updateservers>
        <!-- Note: No spaces or linebreaks allowed between the server tags -->
        <server type="extension" name="NPEU: mod_map Update Site">https://raw.githubusercontent.com/NPEU/mod_map/master/update-manifest.xml</server>
    </updateservers>

    <files>
        <filename module="mod_map">mod_map.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>assets</folder>
        <folder>language</folder>
        <folder>tmpl</folder>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="lat"
                    type="text"
                    label="MOD_MAP_MAP_LAT_LABEL"
                    description="MOD_MAP_MAP_LAT_DESC"
                    size="40"
                    default=""
                    filter="float"
                />
                <field
                    name="lng"
                    type="text"
                    label="MOD_MAP_MAP_LNG_LABEL"
                    description="MOD_MAP_MAP_LNG_DESC"
                    size="40"
                    default=""
                    filter="float"
                />
                <field
                    name="zoom"
                    type="text"
                    label="MOD_MAP_MAP_ZOOM_LABEL"
                    description="MOD_MAP_MAP_ZOOM_DESC"
                    size="40"
                    default=""
                    filter="int"
                />
                <field
                    name="access_token"
                    type="text"
                    label="MOD_MAP_MAP_ACCESS_TOKEN_LABEL"
                    description="MOD_MAP_MAP_ACCESS_TOKEN_DESC"
                    default=""
                />
                <field
                    name="height"
                    type="text"
                    label="MOD_MAP_MAP_HEIGHT_LABEL"
                    description="MOD_MAP_MAP_HEIGHT_DESC"
                    size="40"
                    default="500"
                    filter="int"
                />
                <field
                    name="manual_markers"
                    type="textarea"
                    label="MOD_MAP_MAP_MANUAL_MARKERS_LABEL"
                    description="MOD_MAP_MAP_MANUAL_MARKERS_DESC"
                    default=""
                    rows="10"
                    filter="raw"
                />
            </fieldset>
        </fields>
    </config>

</extension>